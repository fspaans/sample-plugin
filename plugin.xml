<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    id="com.fs.plugin.Sample"
    version="1.0.0">

    <name>Sample</name>

  <description>
    Cordova plugin example
  </description>

  <asset src="www/Sample.js" target="plugins/Sample.js" />

  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>

  <!-- android -->
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
	    <feature name="Sample">
	        <param name="android-package" value="com.fs.plugin.Sample"/>
	    </feature>
    </config-file>

    <source-file src="src/android/com/fs/plugin/Sample.java" target-dir="src/com/fs/plugin" />
  </platform>

  <!-- more platforms here -->

</plugin>